<!--https://developers.google.com/maps/documentation/android-api/map-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="pg.eti.inz.eti.engineer.activities.MapsActivity"
        app:uiZoomControls="true"
        app:uiZoomGestures="false"
        app:cameraZoom="17"
        tools:layout="@layout/blank_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </fragment>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="@drawable/speedometer_background"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:id="@+id/speedMeterLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="8dp">

            <TextView
                android:text="@string/map.speedmeter.widthtemplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MapSpeedMeter"
                android:textSize="50sp"
                android:textStyle="normal|bold"
                android:maxLines="1"
                android:gravity="center"
                android:ellipsize="none"/>

            <TextView
                android:text="@string/map.kmph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="8dp">

            <TextView
                android:text="@string/map.speedmeter.widthtemplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MapTripMeter"
                android:textSize="50sp"
                android:maxLines="1"
                android:textStyle="normal|bold"
                android:ellipsize="none"
                android:gravity="center" />

            <TextView
                android:text="@string/map.km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <fragment
        android:id="@+id/place_autocomplete_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/MapFollowPosCheckBox"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:checked="true"
        android:layout_below="@+id/toolbar2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>